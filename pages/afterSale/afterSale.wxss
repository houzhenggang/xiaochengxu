.selectReason .clear{
  width: 78rpx;
  height: 78rpx;
  position: absolute;
  padding-left: 0;
  top: 0;
  right: 0;
}
.selectReason .clear::before{
  content:'';
  display: block;
  position: absolute;
  width: 30rpx;
  background: #999999;
  height: 2rpx;
  top:50%;
  left: 35%;
  transform: rotate(45deg);
}
.selectReason .rea{
  position: relative;
  z-index: 8999;
}
.selectReason .disabel{
  pointer-events:none;
}
.selectReason .clear::after{
  content:'';
  display: block;
  position: absolute;
  background: #999999;
  top:50%;
  left: 35%;
  width: 30rpx;
  height: 2rpx;
  transform: rotate(-45deg);
}