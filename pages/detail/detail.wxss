image{
	display: block;
}
.detail_container{
	width: 100%;
	height: 100%;
	overflow-x: hidden;
  position: relative;
}
.showIndex{
  position: absolute;
  top: 620rpx;
  right: 30rpx;
  color:#666;
  font-size: 26rpx;
  z-index: 100;
}
swiper{
	width:750rpx;
	height:672rpx;
}
.description{
  font-size: 26rpx;
  padding-bottom: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx 100rpx;
  border-top: 20rpx solid #f6f7f7;
}

.description img{
  width: 100% !important;
  padding: 0;
  margin: 0 auto;
  margin-top: 20rpx;
}
.description p{
  font-size: 26rpx;
}
.detail_imgs image{
	width: 750rpx;
	height: 672rpx;
	display: block;
}

/* description  */
.detail_description{
	width: 750rpx;
}
.padding{
	padding:0 20rpx 0 20rpx;	
}
.name_share{
	overflow: hidden;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.des_name{
	width: 626rpx;
	height: 88rpx;
	display: block;
	font-size: 32rpx;
	margin-top: 16rpx;
	color: #333333;
}
.name_share view button{
	background: #FFFFFF;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
	line-height: normal;
	margin: 0;
	margin-top: 14rpx;
	font-size: 20rpx;
	color: #8F8D8D;
	padding: 0;
}
.name_share view button::after{
	border: none;
	border-radius: 0;
}
.name_share view image{
	width: 40rpx;
	height: 36rpx;
}
.name_share view text{
	margin-top: 4rpx;
}

/* price  */
.detail_price{
	height: 66rpx;
}
.detail_price text:first-child{
	font-size: 48rpx;
	color: #F02417;
	line-height: 66rpx;
}
.detail_price text:nth-child(2){
	margin-left: 22rpx;
	color: #999;
	text-decoration: line-through;
  font-weight:normal;
}
.detail_info{
	height: 34rpx;
	width: 710rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 26rpx;
	color: #999999;
	line-height: 34rpx;
	padding: 14rpx 20rpx 12rpx 20rpx;
	border-bottom: 1px solid #E2E2E2;
}
.detail_promise{
	height: 34rpx;
	width: 710rpx;
	padding: 24rpx 20rpx 20rpx 20rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	font-size: 26rpx;
	line-height: 34rpx;
}
.detail_promise view{
	display: flex;
	align-items: center;
	justify-content: center;
}
.detail_promise view:nth-child(n+2){
  margin-left: 56rpx;
}
.detail_promise image{
	width: 20rpx;
	height: 20rpx;
	margin-right: 8rpx;
}

/* bottom button  */
.detail_bottom{
	width: 750rpx;
	height: 100rpx;
	position: fixed;
	bottom: 0;
  z-index: 100;
  background: #fff;
	/* border-top: 1rpx #D7D7D7 solid; */
	box-sizing: border-box;
	display: flex;
	align-items: center;
}
.detail_bottom image{
	width: 42rpx;
	height: 42rpx;
	margin-bottom: 4rpx;
}
.detail_bottom .detail_cart{
	width: 16%;
	height: 100rpx;
  border-top:1rpx #D7D7D7 solid;
	font-size: 16rpx;
  position: relative;
  box-sizing: border-box;
	color: #414141;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
}
.detail_cart label{
  position: absolute;
  background: #EA2534;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
  top:10rpx;
  right: 20rpx;
  font-size: 20rpx;
  min-width:30rpx;
  height: 30rpx;
  border-radius: 15rpx; 
}
.detail_bottom .addCart{
	width: 42%;
	height: 100rpx;
  border-top:1rpx #D7D7D7 solid;
box-sizing: border-box;
	background: #FFEEEE;
	font-size: 28rpx;
	color: #FB4F4F;
	text-align: center;
	line-height: 100rpx;
}
.detail_bottom .buy{
	width: 42%;
	height: 100rpx;
	background: #EA2534;
	font-size: 28rpx;
	text-align: center;
	line-height: 100rpx;
	color: #FFFFFF;
}

/* mask  */
.mask{
	width: 750rpx;
	height: 100%;
	background: #C0C0C0;
	z-index: 10;
	position: fixed;
	top: 0;
	opacity: 0.8;
}

/* choose  */
.choose{
	position: fixed;
	z-index: 100;
	height: 900rpx;
	width: 750rpx;
	box-sizing: border-box;
	bottom: 0;
	background: #FFFFFF;
}
.choose_price{
	border-bottom: 1rpx solid #EDEDED;
	width: 710rpx;
	margin: 0 auto;
	height:154rpx;
}
.choose .choose_price image:first-child{
	width: 160rpx;
	height: 160rpx;
	position: absolute;
	top: -34rpx;
	left: 20rpx;
}
.choose_price .desc{
	position: absolute;
	left: 192rpx;
	top: 12rpx;
	display: flex;
	flex-direction: column;
}
.choose_price .desc view{
  font-size: 24rpx;
	color: #3A3A3A;
	letter-spacing: 1.8rpx;
}
.choose_price .desc view text{
  margin-right: 10rpx;
}
.choose_price .desc>text:first-child{
	color: #F02317;
	font-size: 36rpx;
}
.choose_price .desc>text:nth-child(2){
	color: #999;
	font-size: 24rpx;
  margin-bottom:6rpx;
}
.choose_price image:last-child{
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	width: 32rpx;
	height: 32rpx;
}

.color_size{
	height: 528rpx;
	padding: 0 20rpx;
	overflow: scroll;
}

/* choose color  */
.choose_color{
	width: 710rpx;
	border-bottom: 1rpx solid #EDEDED;
}
.title{
	color: #3A3A3A;
	letter-spacing: 2.1rpx;
	display: block;
	padding: 10rpx 0;
	line-height: 40rpx;
	font-size: 28rpx;
}
.choose_color view{
	display: flex;
  justify-content: flex-start;
	padding-left:18rpx;
	overflow: hidden;
  flex-wrap: wrap;
  /* padding-bottom: 16rpx; */
}
.choose_color view label{
  display: block;
	height: 34rpx;
	padding:14rpx 22rpx;
  line-height: 34rpx;
	background: #F1F1F1;
  border-radius: 4rpx;
	margin-right: 26rpx;
	margin-bottom: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
}

/* choose size  */
.choose_size{
	width: 710rpx;
	overflow: scroll;
}
.choose_size view{
	color: #121212;
	padding-left:18rpx;
	overflow: hidden;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-bottom: 16rpx;

}
.choose_size view label{
	display: block;
	background: #F1F1F1;
	border-radius: 4rpx;
	height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
	padding:14rpx 22rpx;
	margin-right: 28rpx;
}

/* active style  */
.choose view label.active{
	background: #EA2534;
	color: #FFFFFF;
}

/* count  */
.count{
	width: 710rpx;
	height: 106rpx;
	margin-left: 18rpx;
	border-top: 1rpx solid #EDEDED;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.count .number{
	font-size: 28rpx;
	color: #3A3A3A;
	letter-spacing: 2.1rpx;
}
.count view{
	width: 256rpx;
	height: 56rpx;
	display: flex;
}
.count view text{
	display: block;
	width: 72rpx;
	height: 56rpx;
	text-align: center;
	line-height: 56rpx;
	border: 1rpx solid #D9D9D9;
}
.count view text.add{
	color: #FF547B;
}
.count view .num{
	width: 116rpx;
	height: 56rpx;
	font-size: 28rpx;
	border: none;
	border-top: 1rpx solid #D9D9D9;
	border-bottom: 1rpx solid #D9D9D9;
	color: #121212;
	line-height: 56rpx;
	text-align: center;
}

/* 禁用样式  */
.disabled{
	color: #E3E3E3;
}

/* confirm  */
.confirm{
	width: 750rpx;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	text-align: center;
	line-height: 100rpx;
	background: #EA2534;
	color: #FFFFFF;
	font-size: 32rpx;
	letter-spacing: 2.4rpx;
}