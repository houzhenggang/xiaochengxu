  <!-- <view class='index_current'>
      <view class='{{current===index?"cur":''}}'></view>
  </view> -->
	<!--contact  -->
	<view class="index_contact">
    <image src='{{description.logo_url}}'></image>
    <view class='desc'>
      	<text class='contact_h4'>Hi 亲爱的小主</text>
		    <text class='contact_p'>{{description.description}}</text>
    </view>
    <view class='contacts'>
        <button open-type='contact'><image src='/imgs/Content_icon_WeChat@2x.png'></image></button>
        <image bindtap='contactPhone' src='/imgs/Content_icon_phone@2x.png'></image>
    </view>
		
	</view>

	<!--recommend products  -->
	<view class='index_recommend' wx:if="{{recommend_first}}">
		<text>精品</text>
		<text>推荐</text>
		<text data-type='recommend' data-type='special' bindtap='showMore' bindtap='showMore'>查看更多 ></text>
		<image src='/imgs/Group 3@2x.png'></image>
		<!-- <image data-type='special' bindtap='showMore' src='/imgs/button_right@2x.png'></image> -->
	</view>

	<view class='index_re_produ' wx:if="{{recommend_first}}">
		<image class='re_produ_img' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" src='{{recommend_first[0].cover_url}}'  bindtap='bindDetail'></image>
		<text class='re_produ_text' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" bindtap='bindDetail'>{{recommend_first[0].name}}</text>
		<view class='re_text_view' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" bindtap='bindDetail'>
			<text>￥</text><text>{{filters.toFix(recommend_first[0].price/100)}}</text><text>销量{{recommend_first[0].sales_count}}件</text>
		</view>
		 <view class='buy_button' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" bindtap='bindOrder'>立即购买</view> 
	</view>

	<view class='index_item'>
		<view class='item_box' wx:for="{{recommend_goods}}" data-id='{{item.id}}' data-name="{{item.name}}"  wx:key="index" bindtap='bindDetail'>
			<image src='{{item.cover_url}}'></image>
			<text class='item_text'>{{item.name}}</text>
			<view class='item_text_view'>
				<text>￥</text><text>{{filters.toFix(item.price/100)}}</text><text>销量{{item.sales_count}}件</text>
			</view>
		</view>
	</view>

	<!--special  -->
	<view class='index_recommend index_special' wx:if="{{special_goods}}">
		<text>特价</text>
		<text>促销</text>
		<text data-type='special' bindtap='showMore'>查看更多 ></text>
		<image src='/imgs/Group 3@2x.png'></image>
		<!-- <image data-type='special' bindtap='showMore' src='/imgs/button_right@2x.png'></image> -->
	</view>

	<view class='index_item' wx:if="{{special}}">
		<view class='item_box' wx:key="index" wx:for="{{special_goods}}" data-id='{{item.id}}' data-name="{{item.name}}" bindtap='bindDetail'>
			<image src='{{item.cover_url}}'></image>
			<text class='item_text'>{{item.name}}</text>
			<view class='item_text_view special_item'>
				<text>￥</text><text>{{filters.toFix(item.price/100)}}</text><text>{{item.display_price}}</text>
			</view>
		</view>
	</view>

	<!--bottom  -->
	<view class='bottom'>到底啦，去别处逛逛吧</view>
</view>
