<!--index.wxml-->
<wxs module="filters" src="../../utils/method.wxs"></wxs>
<view class="index_container">

	<!--search button  -->
	<view class='container_search'>
		<navigator class='container_search_navi' url="/pages/search/search">大量好物等你发现
			<icon type='search' size='12' color='#999999'></icon>
		</navigator>
	</view>

	<!--banner  -->
	<image class='index_banner1' src='{{image}}{{description.logo_url}}'></image>

   <swiper indicator-dots="{{indicatorDots}}"
      touch="{{touch}}"  duration="{{duration}}" bindchange='changeCurrent'   current='{{current}}'>
      <block wx:for="{{newCate}}" wx:for-item='item' wx:key='index' >
        <swiper-item class='index_classify'>
          <view wx:for="{{item}}"  wx:for-item='items' wx:for-index='id' wx:key='id'  data-idx="{{index}}" data-index="{{id}}"  bindtap='switchCate'>
            <image src='{{image}}{{items.icon_url}}'></image>
            <text>{{items.name}}</text>
          </view>
        </swiper-item>
      </block>
  </swiper> 

   <view class='index_current'>
      <view wx:key='index' wx:for="{{newCate}}" class='{{current===index?"cur":""}}'></view>
  </view> 
	<!--contact  -->
	<view class="index_contact">
    <image src='{{image}}{{description.logo_url}}'></image>
    <view class='desc'>
      	<text class='contact_h4'>Hi 亲爱的小主</text>
		    <text class='contact_p'>{{description.description}}</text>
    </view>
    <view class='contacts'>
        <button open-type='contact'><image src='/imgs/Content_icon_WeChat@2x.png'></image></button>
        <image bindtap='contactPhone' src='/imgs/Content_icon_phone@2x.png'></image>
    </view>
		
	</view>

	<!--recommend products  -->
  <view wx:if="{{recommend_first}}">
      	<view class='index_recommend'>
          <text>精品</text>
          <text>推荐</text>
          <text data-type='recommend'  bindtap='showMore'>查看更多 ></text>
          <image src='/imgs/Group 3@2x.png'></image>
          <!-- <image data-type='special' bindtap='showMore' src='/imgs/button_right@2x.png'></image> -->
        </view>

        <view class='index_re_produ'>
          <image class='re_produ_img' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" src='{{image}}{{recommend_first[0].cover_url}}'  bindtap='bindDetail'></image>
          <text class='re_produ_text' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" bindtap='bindDetail'>{{recommend_first[0].name}}</text>
          <view class='re_text_view' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" bindtap='bindDetail'>
            <text>￥</text><text>{{filters.toFix(recommend_first[0].price/100)}}</text><text>销量{{recommend_first[0].sales_count}}件</text>
          </view>
          <view class='buy_button' data-id='{{recommend_first[0].id}}' data-name="{{recommend_first[0].name}}" bindtap='bindDetail'>立即购买</view> 
        </view>

        <view class='index_item'>
          <view class='item_box' wx:for="{{recommend_goods}}" data-id='{{item.id}}' data-name="{{item.name}}"  wx:key="index" bindtap='bindDetail'>
            <image src='{{image}}{{item.cover_url}}'></image>
            <text class='item_text'>{{item.name}}</text>
            <view class='item_text_view'>
              <text>￥</text><text>{{filters.toFix(item.price/100)}}</text><text>销量{{item.sales_count}}件</text>
            </view>
          </view>
        </view>
  </view>

	<!--special  -->
	
  <view wx:if="{{special_goods}}">
      <view class='index_recommend index_special' >
        <text>特价</text>
        <text>促销</text>
        <text data-type='special' bindtap='showMore'>查看更多 ></text>
        <image src='/imgs/Group 3@2x.png'></image>
        <!-- <image data-type='special' bindtap='showMore' src='/imgs/button_right@2x.png'></image> -->
      </view>

      <view class='index_item'>
        <view class='item_box' wx:key="index" wx:for="{{special_goods}}" data-id='{{item.id}}' data-name="{{item.name}}" bindtap='bindDetail'>
          <image src='{{image}}{{item.cover_url}}'></image>
          <text class='item_text'>{{item.name}}</text>
          <view class='item_text_view special_item'>
            <text>￥</text><text>{{filters.toFix(item.price/100)}}</text><text>{{filters.toFix(item.display_price/100)}}</text>
          </view>
        </view>
      </view>
  </view>

	<!--bottom  -->
	<view class='bottom'>到底啦，去别处逛逛吧</view>
</view>
