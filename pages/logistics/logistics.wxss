page{
  width: 100%;
  height: 100%;
  background: #F6F7F7;
}
.head{
  width: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
  background: #fff;
  margin:20rpx 0;
}
.head label{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  display: block;
  padding:10rpx 0;
  line-height: 28rpx;
}
.head label em{
  color:#001316;
}
.content{
  background: #fff;
}
.step{
  width: 100%;
  box-sizing: border-box;
  padding-left: 15%;
  position: relative
}
.round{
  position: absolute;
  top:50%;
  width: 26rpx;
  height: 26rpx;
  left:6%;
  background:#D8D8D8;
  border-radius: 50%;
  transform: translateY(-50%); 
}
.content .info{
  width:100%;
  box-sizing: border-box;
  border-bottom:1rpx solid #EBEBEB;
  padding-right:20rpx;
}
.content .step:first-child .round{
    width: 26rpx;
    height: 26rpx;
    border: 4rpx solid rgba(234,37,52,0.52);
    left:5.5%;
    background:#EA2534;
}
.content .step:first-child label{
   color:#EA2534;
}

.info label:first-child{
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    line-height: 30rpx;
    color: #666666;
    padding-top: 30rpx
}
.info label:last-child{
    display: block;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    padding-bottom:19rpx
}