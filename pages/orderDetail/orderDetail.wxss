.shade{
  width: 100%;
  position: fixed;
  height: 100%;
  z-index: 999;
  background: rgba(4, 4, 4, 0.4);
  top: 0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.contact{
  background: #fff;
  width: 460rpx;
  border-radius: 6rpx;
  position: relative;
  padding: 0 14rpx;
  box-sizing: border-box;
}
.contact .title{
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    height: 84rpx;
    line-height: 84rpx;
    text-align: center;
    color: #333333;
    border-bottom: 1rpx solid #E3E3E3;
}
.contact  .iphone{
    display: flex;
    align-items: center;
    width: 100%; 
    justify-content: flex-start;
    height: 72rpx;
    font-size: 26rpx;
    border-top: 1rpx solid #E3E3E3;
}
.contact  button{
    background: #fff;
    display: flex;
    align-items: center;
    width: 100%; 
    height: 72rpx;
    font-size: 26rpx;
    justify-content: flex-start;
    padding:0;
}
.contact  button::after{  
   border:none; 
  border-radius: none;
}  
.contact button image{
  padding-left: 6rpx;
  margin-right: 20rpx;
  width: 48rpx;
  height: 40rpx;
  display: block;
}
.contact .iphone image{
   padding-left: 14rpx;
 margin-right: 16rpx;
  width: 44rpx;
    height: 46rpx;
    display: block;
}
.contact label{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
}

.contact .clear{
  width: 78rpx;
  height: 78rpx;
  position: absolute;
  padding-left: 0;
  top: 0;
  right: 0;
}
.contact .clear::before{
  content:'';
  display: block;
  position: absolute;
  width: 30rpx;
  background: #999999;
  height: 2rpx;
  top:50%;
  left: 35%;
  transform: rotate(45deg);
}
.contact .clear::after{
  content:'';
  display: block;
  position: absolute;
  background: #999999;
  top:50%;
  left: 35%;
  width: 30rpx;
  height: 2rpx;
  transform: rotate(-45deg);
}