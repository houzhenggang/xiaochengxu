<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">待付款</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">待发货</view>  
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">待收货</view>  
    <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="swichNav">已收货</view>  
    <view class="swiper-tab-list {{currentTab==5 ? 'on' : ''}}" data-current="5" bindtap="swichNav">退还/售后</view>  
</view>  
  
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px"  bindchange="bindChange">  
    <!-- 我是哈哈 -->  
    <swiper-item>  
      <view>
          <view class='container' hidden='{{allOrde!==[]}}'>
                <image src='/imgs/empty_order.png'></image>
                <view>您的订单空空如也呢</view>
                <text>去别的页面看看吧</text>
          </view>
          <view  class='content' hidden='{{allOrder==[]}}' >
              <navigator url='/pages/details/details' hover-class='none' wx:for="{{allOrder}}" wx:for-index="index" wx:key="id">
                  <view class='top'>
                      <label>下单时间：{{item.time}}</label>
                      <label>待付款</label>
                  </view>
                  <view class='orderList'>
                          <image class='goodImg' src='{{item.img}}'></image>
                          <view class='goodsInfo'>     
                              <view class='title'>{{item.title}}</view>
                              
                                <view class='infoBottom'>
                                <label>{{item.size}}</label> <label>+{{item.num}}</label>
                                </view>
                                <label>
                                {{item.preprice}}
                                </label>

                      </view>
                  </view>
                  <view class='bottom'>
                      <label>实付：￥{{item.price}}</label>
                      <label>待付款</label>
                  </view>
              </navigator>
              
          </view>
      </view>  
    </swiper-item>  
    <!-- 我是呵呵 -->  
    <swiper-item>  
      <view>
      </view>  
    </swiper-item>  
    <!-- 我是嘿嘿 -->  
    <swiper-item>  
      <view>我是待发货</view>  
    </swiper-item>  
     <swiper-item>  
      <view>我是待收货</view>  
    </swiper-item>  
     <swiper-item>  
      <view>我是已收货</view>  
    </swiper-item>  
     <swiper-item>  
      <view>我是退还/售后</view>  
    </swiper-item>  
</swiper>  
