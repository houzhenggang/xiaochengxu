.container {
  width:750rpx;
  height: 312rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mobile{
  width: 100%;
}
.tel{
  width: 500rpx;
}
.userinfo-avatar {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  line-height: 56rpx;
  margin-top: 14rpx;
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #333333;
}
.content{
  width: 100%;
  margin-top:150rpx;
  padding:0 26rpx 0 82rpx;
  box-sizing: border-box;
  /* display: flex;
  align-items: center; */
  position: relative;
}
.content view{
  display: flex;
  align-items: center; 
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom:8rpx;
  width: 100%;
}
.content .regMob{
  width: 24rpx;
  height: 38rpx;
  position: absolute;
  top:9rpx;
  left:42rpx;
}
.yanzm input{
  width: 60%;
}
.yzm_icon{
  width:32rpx;
  height: 34rpx;
  position: absolute;
  top:10rpx;
  left:38rpx;
}
.lst{
  margin-top:60rpx;
}
input{
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #999999;
  padding-left:16rpx;
}
.phcolor{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
}
button{
  background:#fff !important;
  display:flex;
  height:50rpx;
  align-items:center;
  width:40%;
  justify-content:flex-end;
  padding:0;
  padding-right:20rpx;
  margin:0;
  text-align:right;
  line-height:50rpx;
  z-index: 100;
  font-family:PingFangSC-Regular;
  font-size:28rpx;
  color:#3A3A3A;

}
button::after{  
  border:none; 
  border-radius: none;
  line-height: 40rpx;

}  
.gray{
  color: #999;
}
.sub{
  width: 680rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius:6rpx;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #FFFFFF;
  margin:0 auto;
  margin-top:82rpx;
}
.allow{
    background: #B4B0B1;
}
.notAllow{
  background: #EA2534;
}