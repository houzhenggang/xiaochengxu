<wxs module="filters" src="../../utils/method.wxs"></wxs>
<view class='container' wx:if="{{datalist.length==0}}">
      <image src='/imgs/emptyCar.png'></image>
      <view>购物车竟然是空的</view>
      <text>"快买点东西犒劳自己吧"</text>
      <view class='switch_index' hover-class='none' bindtap='goIndex'>
      去看看
      </view>
</view>
<view class='content' wx:if="{{datalist.length!=0}}">
    <view wx:for="{{datalist}}" bindtouchstart='touchStart' bindtouchmove='touchMove'   data-index="{{index}}"   wx:key="index" class="carInfo {{item.isTouchMove ? 'touch-move-active' : ''}}">
      <navigator class='contents'  url='/pages/detail/detail?id={{item.goods_id}}&&name={{item.name}}' hover-class='none'>
        <view  catchtap='select' class='sel' data-index="{{index}}" data-id="{{item.id}}">
              <image class='select'  wx:if='{{item.isSelect}}' src='/imgs/checked.png'></image>
              <image class='select'   wx:else='{{item.isSelect}}' src='/imgs/unchecked.png'></image>
        </view>
      <image class='goodImg' src='{{image}}{{item.cover_url}}'></image>
      <view class='goodsInfo'>    
              <view>{{item.name}}</view>
              <label>{{item.sku_description}}</label>
          <view class='infoBottom'>
                  <label>￥{{filters.toFix(item.price/100)}}</label>
                  <view class='changNum'>
                    <label data-index="{{index}}" data-id="{{item.id}}" class='btn' catchtap='subtraction'>-</label>
                    <text>{{item.count}}</text>
                    <label class='btn' data-index="{{index}}" data-id="{{item.id}}" catchtap='add'>+</label>
                  </view>
              </view>
      </view>
      </navigator>
      <view class='delete' catchtap='del' data-index="{{index}}" data-id='{{item.id}}'>
        删除
      </view>
    </view>

		<!-- 删除/全选  -->
		<view class='bottom'>
			<image class='select' bindtap='selectAll' wx:if='{{!selectAll}}' src='/imgs/unchecked.png'></image>
      <image class='selected'  bindtap='selectAll' wx:else='{{selectAll}}' src='/imgs/checked.png'></image>
			<view class='total_text'>
				<view><text>全选</text><text bindtap='bottomDelete'>删除</text></view><text>合计：￥{{filters.toFix(totalPrice/100)}}</text>
			</view>
			<view class='balance' bindtap='balance'>结算</view>
		</view>
</view>
