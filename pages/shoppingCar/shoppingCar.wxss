.carInfo{
  width:750rpx;
  align-items: center;
	overflow: hidden;
  border-top:20rpx solid #f6f7f7;

}
.carInfo .select{
  width: 40rpx;
  height: 40rpx;
	float: left;
  margin: 98rpx 18rpx 0 28rpx;
}
.goodsInfo{
  padding-left:20rpx;
  width: 448rpx;
	margin-top: 22rpx;
	float: left;
}
.carInfo .goodImg{
  width: 160rpx;
  height: 160rpx;
	margin-top: 28rpx;
	display: block;
	float: left;
}
.goodsInfo view{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3A3A3A;
  line-height: 36rpx;
  height: 72rpx;
}
.goodsInfo label{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  line-height: 34rpx;
}
.goodsInfo navigator label{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  line-height: 34rpx;
  margin-top: 10rpx;
}
.infoBottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.changNum{
  display: flex;
  justify-content: flex-end;
  align-items:center;
}
.infoBottom label{
  color: #F02417;
  font-size: 32rpx;
  line-height: 44rpx;
}
.changNum label{
  padding:0;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border:1rpx solid #d9d9d9;
  border-radius:0;
  font-size: 36rpx;
}
.changNum label:nth-child(1){
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  color: #666;
}
.changNum label:nth-child(3){
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  margin-right: 20rpx;
  color:#FF547b;
}
.changNum text{
  width: 72rpx;
  height: 48rpx;  
  line-height:48rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #3A3A3A;
  letter-spacing: 0.9px;
  border-top:1rpx solid #d9d9d9; 
  border-bottom:1rpx solid #d9d9d9; 
  text-align: center;
}

.delete{
	display: none
}

/* bottom  */
.bottom{
	width: 750rpx;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	background: #F7F7F7;
}
.bottom image{
  width: 40rpx;
  height: 40rpx;
	float: left;
  margin: 34rpx 18rpx 0 28rpx;
}
.bottom .total_text{
	float: left;
	height: 100rpx;
	line-height: 100rpx;
	width: 464rpx;
	display:flex;
	align-items:center;
	justify-content:space-between;

}
.total_text text:nth-child(1){
	font-size: 28rpx;
	color: #999999;
}
.total_text text:nth-child(2){
	padding: 30rpx 20rpx;
	font-size: 28rpx;
	color: #EA2534;
}
.total_text text:nth-child(3){
	font-size: 32rpx;
	color: #F02417;
	margin-left: 80rpx;
}
.bottom .balance{
	float: right;
	width: 200rpx;
	height: 100rpx;
	text-align: center;
	background: #EA2534;
	color: #FFFFFF;
	font-size: 32rpx;
	line-height: 100rpx;
}