.carInfo{
  width:100%;
  align-items: center;
	overflow: hidden;
  border-bottom:20rpx solid #f6f7f7;
  display: flex;
  justify-content: flex-start;
}

.carInfo .select{
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #d9d9d9;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.carInfo .cur{
  background: #F02417;
  border:1rpx solid #F02417;
}
.carInfo .cur::before{
  background: #fff;
  content:'';
  display: block;
  width: 4rpx;
  height: 24rpx;
  top: 8rpx;
  left: 21rpx;
  transform: rotate(45deg);
  position: absolute;
}
.carInfo .cur::after{
  background: #fff;
  content:'';
  display: block;
  width: 4rpx;
  top:14rpx;
  left: 9rpx;
  height: 16rpx;
  transform: rotate(-45deg);  
  position: absolute;
}
.goodsInfo{
  padding-left:20rpx;
  width: 460rpx;
	margin-top: 20rpx;
	float: left;
}
.carInfo .goodImg{
  width: 160rpx;
