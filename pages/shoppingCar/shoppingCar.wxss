}
.goodsInfo navigator label{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  line-height: 34rpx;
  margin-top: 10rpx;
}
.infoBottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* margin-top: 20rpx; */
}
.changNum{
  display: flex;
  justify-content: flex-end;
  align-items:center;
}
.infoBottom label{
  color: #F02417;
  font-size: 32rpx;
  line-height: 44rpx;
}
.changNum label{
  padding:0;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border:1rpx solid #d9d9d9;
  border-radius:0;
  font-size: 36rpx;
}
.changNum label:nth-child(1){
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  color: #666;
}
.changNum label:nth-child(3){
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  margin-right: 20rpx;
  color:#FF547b;
}
.changNum text{
  width: 72rpx;
  height: 48rpx;  
  line-height:48rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #3A3A3A;
  letter-spacing: 0.9px;
  border-top:1rpx solid #d9d9d9; 
  border-bottom:1rpx solid #d9d9d9; 
  text-align: center;
}
.contents{
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(120rpx);
  transform: translateX(120rpx);
  margin-left: -120rpx;
  width: 100%;
}
.sel{
  width: 86rpx;
  float:left;
  position: relative;
  height:100%
}
.delete{  
    background-color: #F02417;
    width: 120rpx;
    height: 100%;
	  display: flex;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(120rpx);
    transform: translateX(120rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}
.touch-move-active .contents,
.touch-move-active .delete {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}
