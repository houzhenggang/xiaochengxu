/* pages/special/special.wxss */
page{
	height: 100%;
	background: #F6F7F7;
}
.special_container{
	height: 100%;
	display: flex;
	flex-direction: column;
}
.special_item{
	width: 710rpx;
	margin: 0 auto;
	margin-top: 24rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.item_box{
	width: 344rpx;
	height: 484rpx;
	background: #FFFFFF;
	position: relative;
	margin-bottom: 22rpx;
}
.item_box .product{
	width: 344rpx;
	height: 344rpx;
	position: relative;
	display: block;
}
.item_box .item_text{
	display: block;
	font-size: 24rpx;
	font-family: PingFangSC-Regular;
	padding: 0 14rpx 0 18rpx;
	margin-top: 14rpx;
	color: #333333;
	line-height: 36rpx;
  height: 72rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.item_box .item_text_view{
	display: flex;
	align-items: center;
	height: 32rpx;
	padding: 0 14rpx 0 18rpx;
	margin-top: 8rpx;
	position: relative;
}
.item_text_view text:nth-child(1){
	font-size: 22rpx;
	font-family: PingFangSC-Regular;
	color: #EA2534;
	line-height: 32rpx;
}
.item_text_view text:nth-child(2){
	font-size: 26rpx;
	font-family: PingFangSC-Regular;
	color: #EA2534;
	line-height: 32rpx;
	margin-right: 18rpx;
}
.item_text_view text:nth-child(3){
	font-size: 22rpx;
	font-family: PingFangSC-Regular;
	color: #999999;
	line-height: 32rpx;
	position: absolute;
	right: 0;
}

.special_price text:nth-child(2){
	margin-right: 0;
}
.special_price text:nth-child(3){
	position: static;
	text-decoration:line-through;
}

.bottom_text{
	width: 750rpx;
	height: 80rpx;
	background: #F6F7F7;
	text-align: center;
	font-size: 22rpx;
	position: relative;
	line-height: 80rpx;
	color: #999999;
	font-family: PingFangSC-Regular;
}
.bottom_text::before{
		content: "";
		border-top: 1px solid #DCDCDC;
		display: block;
		position: absolute;
		width: 88rpx;
		top: 39rpx;
		left: 156rpx;
}
.bottom_text::after{
		content: "";
		border-top: 1px solid #DCDCDC;
		display: block;
		position: absolute;
		width: 88rpx;
		top: 39rpx;
		right: 156rpx;
}

/* recommend button  */
.recommend_up{
	width: 60rpx;
	height: 60rpx;
	position: fixed;
	right: 20rpx;
	bottom: 78rpx;
}
.recommend_up image{
	width: 60rpx;
	height: 60rpx;
	display: block;
}