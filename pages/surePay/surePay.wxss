.address{
  border-top:20rpx solid  #F6F7F7;
  border-bottom:20rpx solid  #F6F7F7;
  height: 122rpx;
  position: relative;
  padding-left:60rpx;

}
page{
  width: 100%;
  height: 100%;
}
.address image{
  width: 24rpx;
  height: 30rpx;
  position: absolute;
  top:20rpx;
  left:20rpx;
}
.name label:nth-child(1){
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #333333;
}
.name label:nth-child(2){
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333333;
  margin-left:40rpx;
}
.addr{
  font-family: PingFangSC-Regular;
  font-size: 24rpx; 
  color: #333333;
  margin-top:16rpx;
}
.detail{
  width: 100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.menus{
  display: flex;
  border-bottom:1rpx solid #E3E3E3;
  height: 236rpx;
  align-items: center;

}
.menus image{
  height: 200rpx;
  width:200rpx; 
  margin-right: 20rpx;
}
.desc>label:nth-child(1){
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333333;
  width: 474rpx;
  display: block;
}
.desc>label:nth-child(2){
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  margin-top:28rpx;
  display: block;
}
.desc view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.desc view label{
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #151515;
}

.info{
  border-bottom:1rpx solid #E3E3E3;
}
.detail .info:last-child{
    border-bottom:none;
}
.info view{
  display: flex;
  justify-content: space-between
}
.info label{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  line-height: 36rpx;
  margin-top:18rpx;
}
.info view:last-child{
  margin-bottom: 18rpx;
}
.confirmPay{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.confirmPay view:first-child{
   width: 60%;
   height: 100rpx;
   line-height: 100rpx;
   box-sizing: border-box;
   padding-left: 20rpx;
   border-top: 1rpx solid  #E3E3E3;
   font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333333;
}
.confirmPay view:first-child label{
  font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #EA2534;
}
.confirmPay view:last-child{
    width: 40%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #EA2534;
    color:#fff;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
}