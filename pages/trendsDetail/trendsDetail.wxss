/* pages/trends/trends.wxss */
page {
  background: #F9F9F9;
  height: 100%;
  position: relative;
}

.input_outer {
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  width: 100%;
  background: white;
  display: flex;
  align-items: center;
  padding: 30rpx 0 0 20rpx; 
}
.box_content .images .two {
  width: 338rpx;
  margin: 0 auto;
}
.input_outer text {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #999999;
  margin-bottom: 30rpx;
}
.input_outer text.active {
  color: #EA2534;
}
.title{
  margin-bottom:20rpx;
  font-size: 28rpx;
  color: #333;
}
.content{
  width: 100%;
  height: 90%;
  overflow: scroll;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #fff;
  padding-bottom: 20rpx;
}
input {
  border: 1px solid #E3E3E3;
  width: 624rpx;
  height: 70rpx;
  background: white;
  padding-left: 10rpx;
  color: #222222;
  font-size: 24rpx;
  border-radius: 4rpx;
  cursor-spacing: 0;
  margin-bottom: 30rpx;
}
/* .item_box {
  background: white;
  margin-bottom: 20rpx;
} */
.item_box:nth-last-child(2) {
  margin-bottom: 0;
  padding-bottom: 0;
}
.item_box .box_header {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.item_box .box_header image {
  width: 68rpx;
  height: 68rpx;
  display: block;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.item_box .box_header .user_info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999999;
}
.item_box .box_header .user_info text:first-child {
  color: #333333;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
}
.user_info  text:nth-child(2){
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9CA2B0;
}
.box_content {
  color: #999999;
  font-size: 24rpx;
  margin-top: 18rpx;
}
.box_content .content_text {
  color: #333333;
  font-size: 28rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical; 
  overflow: hidden;
  line-height: 40rpx;
}
.box_content .content_text.title {
  font-size: 32rpx;
  -webkit-line-clamp: 1;
}
.box_content .images {
  margin-top: 20rpx;
  width: 100%;
  /* overflow: hidden; */
  display: flex;
  flex-wrap: wrap;
}
.box_content .images .more {
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}
.box_content .images .more:nth-child(3n+1){
  margin-left: 0;
}

.box_content .images image.more {
  width: 222rpx;
  height: 222rpx;
}
 .box_content .images .one {
   width:690rpx;
   margin: 0 auto;
}
.box_content .images .two {
  width: 338rpx;
  height: 338rpx;
  margin-left: 10rpx;
}
.box_content .images .two:first-child {
  margin-left: 0;
}
.box_content .stati_data {
  margin-top: 34rpx;
  height: 36rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
}
.box_content .stati_data .stati_left view:first-child {
  margin-right: 54rpx;
}
.box_content .stati_data .stati_left view:first-child image {
  width: 40rpx;
}
.box_content .stati_data view {
  display: flex;
  align-items: center;
}
.box_content .stati_data view image {
  display: block;
  width: 36rpx;
  height: 33rpx;
  margin-right: 20rpx;
}
.box_content .stati_data>view>image {
  height: 38rpx;
}
.box_content .stati_data>view>image.voted_img {
  height: 38rpx;
}
.box_content .comments {
  margin-top: 40rpx;
  background: #F5F5F7;
  padding: 20rpx;
  font-size: 28rpx;
  position: relative;
}
.box_content .comments::before {
  display:block;
  content:'';
  border-width:20rpx;
  border-style:solid;
  border-color:transparent transparent #F5F5F7 transparent;
  position:absolute;
  left:15%;
  top:-20rpx;
}
.box_content .comments view {
  margin-top: 30rpx;
  overflow: hidden;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.box_content .comments view:first-child {
  margin-top: 0;
}
.box_content .comments text {
  float: left;
  color: #000000;
}
.box_content .comments text:nth-child(2) {
  color: #999999;
}
.box_content .comments .comments_count {
  color: #EA2534;
  margin-bottom: 0;
}

.item_box .comments {
  margin-top: 40rpx;
  background: #F5F5F7;
  padding: 20rpx;
  font-size: 28rpx;
  position: relative;
}
.item_box .comments::before {
  display:block;
  content:'';
  border-width:20rpx;
  border-style:solid;
  border-color:transparent transparent #F5F5F7 transparent;
  position:absolute;
  left:30%;
  top:-40rpx;
}
.top{
  position: absolute;
  top:-30rpx;
  left:19%;
  width: 0;
  height:0;
  border-width:20rpx;
  border-style:solid;
  border-color:transparent transparent #F5F5F7;/*透明 透明  灰*/
}
.item_box .comments view {
  margin-bottom: 60rpx;
}
.item_box .comments text {
  color: #000000;
}
.item_box .comments .comments_count {
  color: #EA2534;
  margin-bottom: 0;
}
.comments{
  background: #F6F7F7;
  border-radius: 4px;
  margin-top: 32rpx;
  position: relative;
}
.comment{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3F3F3F;
  padding: 20rpx 14rpx;
  border-bottom: 1rpx solid #FDFDFD;
  overflow: hidden;
}
.comment view {
  color: #666666;
  overflow: hidden;
  float: left;
  line-height: 44rpx;
}
.comment view:last-child {
  float: right;
  color: #999999;
}
.comment view text {
  float: left;
  margin-right: 4rpx;
}
.comment view text:nth-child(2) {
  color: #666666;
}
.time{
  position: absolute;
  top:20rpx;
  right: 0;
}
.comment label{
  display: block;
}
.comment view {
  word-break: break-all;
  word-wrap: break-word;
}
.user{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  /* line-height: 44rpx; */
}
.clearfix:after{content:"";display:block;clear:both;}
.clearfix{
    zoom:1;
}


